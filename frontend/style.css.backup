* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Times New Roman', LTimes, serif;
    background-color: #f8f8f8;
    color: #222;
}

.login {
    padding: 10px 20px;
    margin: 15px;
    cursor: pointer;
    color: #121212;
    border: none;
    border-radius: 5px;
    font-size: 15px;


}

.login:hover {
    background-color: #333;
    color: white;
}

.toggle {
    padding: 10px 20px;
    margin: 20px;
    cursor: pointer;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 15px;
}

.cart {
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
}

body.dark-mode {
    background-color: #121212;
    color: white;
}

body.dark-mode .toggle {
    background-color: white;
    color: #121212;
}

body.dark-mode #nav-links,
body.dark-mode .title,
body.dark-mode .cards h3,
body.dark-mode .product-card h3 {
    background-color: #121212;
    color: white;
}

/* Optional: style other elements */
nav.dark-mode,
footer.dark-mode {
    background-color: #1e1e1e;
}

/* ---------- Navigation ---------- */
nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
    padding: 10px 30px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 1000;
    min-height: 60px;
    width: 100%;
    margin-bottom: 20px;
    box-sizing: border-box;
}


nav h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 1.8rem;
    color: #333;
}

nav ul {
    list-style: none;
    display: flex;
    gap: 20px;
}

nav li {
    cursor: pointer;
    padding: 5px 10px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

nav li:hover {
    background-color: #e0e0e0;
}

nav li a {
    text-decoration: none;
    color: inherit;
}

.nav-search {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1 1 260px;
    max-width: 360px;
}

.nav-search input {
    flex: 1;
    padding: 6px 12px;
    border-radius: 20px;
    border: 1px solid #ccc;
    font-size: 0.95rem;
}

.nav-search button {
    padding: 6px 14px;
    border: none;
    border-radius: 20px;
    background: #333;
    color: #fff;
    cursor: pointer;
    font-weight: 600;
}

.nav-search button:hover {
    background: #555;
}

/* Nav actions: login link and profile */
#nav-actions {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-left: 12px;
}

#login-link {
    text-decoration: none;
    color: #333;
    padding: 6px 10px;
    border-radius: 6px;
    background: transparent;
}

#login-link:hover {
    background: #f0f0f0;
}

#profile {
    position: relative;
}

#profile-btn {
    background: transparent;
    border: none;
    font-size: 18px;
    cursor: pointer;
    padding: 6px;
    border-radius: 6px;
}

.profile-menu {
    position: absolute;
    right: 0;
    top: 38px;
    background: #fff;
    border: 1px solid #e6e6e6;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
    border-radius: 8px;
    padding: 10px;
    min-width: 160px;
    z-index: 2000;
}

.profile-menu p {
    margin: 0 0 8px 0;
    font-weight: 600;
}

.profile-menu button {
    display: block;
    width: 100%;
    padding: 8px 10px;
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    border-radius: 6px;
}

.profile-menu button:hover {
    background: #f5f5f5;
}

.hidden {
    display: none !important;
}

/* ---------- Banners ---------- */
.banner {
    width: 100%;
    height: 60vh;
    overflow: hidden;
    background: linear-gradient(135deg, #eaeaea, #f5f5f5);
    display: flex;
    align-items: center;
    justify-content: center;
}

.banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
}

/* media querys*/
@media (max-width: 600px) {

    /* CSS rules here apply when viewport â‰¤ 600px */
    .banner {
        height: 60vh;
    }

    .banner img {
        width: 500px;
        height: 600px;
        object-fit: fill;
        border-radius: 0;
        /* show full image on small screens */
    }

}

.slipperbanners {
    width: 100%;
    height: 80vh;
    overflow: cover;
    margin-top: 20px;
}

.slipperbanners img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

/* ---------- Cards Section ---------- */
#allCategorys {
    text-align: center;
    margin-top: 40px;
    font-size: 1.8rem;
    color: #222;
}

.cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    padding: 30px;
    margin: 0 20px 40px 20px;
    cursor: pointer;
}

.card {
    background-color: #fff;
    border-radius: 15px;
    overflow: hidden;
    text-align: center;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    cursor: pointer;
}

.card h3 {
    margin: 10px 0;
    font-size: 1.4rem;
}

/* ---------- Best Sellers ---------- */
.title {
    text-align: center;
    margin-top: 40px;
    font-size: 1.8rem;
    color: #222;
}


.shoes {
    display: flex;
    gap: 10px;
    overflow-x: auto;
    padding: 20px 30px;
}

.shoes::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 4px;
}

.shoes::-webkit-scrollbar-track {
    background: transparent;
}


.shoes::-webkit-scrollbar {
    height: 8px;
    background: transparent;

}

.product-card {
    flex: 0 0 300px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 8px 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    padding: 10px;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.product-card img {
    flex: 0 0 140px;
    width: 140px;
    height: 140px;
    object-fit: cover;
    border-radius: 8px;
}

.product-card p {
    margin: 6px 0 0 0;
    font-size: 0.95rem;
    color: #444;
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.product-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 10px;
    cursor: pointer;
}

.product-card p {
    margin-top: 8px;
    font-size: 0.95rem;
    color: #444;
}

.price {
    display: block;
    margin-top: 10px;
    font-size: 1.1rem;
    color: #e53935;
    font-weight: bold;
    letter-spacing: 1px;
}

.buynow {
    background-color: orange;
    padding: 3px;
    border-radius: 5px;
    font-weight: bold;
    margin-top: 5px;
    cursor: pointer;
}


/*---------- Footer ----------*/
footer {
    background-color: #222;
    color: #fff;
    padding-top: 40px;
    font-family: 'Poppins', sans-serif;
}

.newsletter {
    background-color: #f0f0f0;
    padding: 40px 20px;
    text-align: center;
    margin-top: 40px;
}

.newsletter h2 {
    color: #333;
    margin-bottom: 10px;
    font-size: 1.8rem;
}

.newsletter p {
    color: #666;
    margin-bottom: 20px;
}

.newsletter-form {
    display: flex;
    justify-content: center;
    gap: 10px;
    max-width: 500px;
    margin: 0 auto;
}

.newsletter-form input {
    flex: 1;
    padding: 12px 20px;
    border: 1px solid #ddd;
    border-radius: 30px;
    outline: none;
}

.newsletter-form button {
    padding: 12px 30px;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s;
}

.newsletter-form button:hover {
    background-color: #555;
}

.footer-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px 40px 30px;
}

.footer-col h3 {
    font-size: 1.2rem;
    margin-bottom: 20px;
    position: relative;
    padding-bottom: 10px;
}

.footer-col h3::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 50px;
    height: 2px;
    background-color: orange;
}

.footer-col ul {
    list-style: none;
}

.footer-col ul li {
    margin-bottom: 12px;
}

.footer-col ul li a {
    color: #bbb;
    text-decoration: none;
    transition: color 0.3s;
}

.footer-col ul li a:hover {
    color: white;
    padding-left: 5px;
}

.social-links {
    display: flex;
    gap: 15px;
}

.social-links a {
    color: #fff;
    font-size: 1.2rem;
    text-decoration: none;
    background: #444;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background 0.3s;
}

.social-links a:hover {
    background: orange;
}

.footer-bottom {
    background-color: #1a1a1a;
    text-align: center;
    padding: 20px;
    border-top: 1px solid #333;
    color: #888;
    font-size: 0.9rem;
}

/* ===========================
   Mobile Media Queries
   =========================== */

@media (max-width: 768px) {

    /* --- Navigation --- */
    nav {
        flex-direction: column;
        padding: 15px;
        height: auto;
        gap: 15px;
    }

    nav h1 {
        margin-bottom: 5px;
    }

    nav ul {
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        width: 100%;
    }

    .nav-search {
        width: 100%;
        max-width: 100%;
        margin: 5px 0;
    }

    .nav-search input {
        width: 100%;
    }

    #nav-actions {
        margin-left: 0;
        margin-top: 5px;
        width: 100%;
        justify-content: center;
    }

    /* --- Banner --- */
    .banner {
        height: 40vh;
    }

    /* --- Categories & Cards --- */
    .cards {
        grid-template-columns: 1fr;
        padding: 20px;
        gap: 20px;
    }

    .card img {
        height: 200px;
    }

    /* --- Best Sellers / Horizontal Scroll --- */
    .shoes {
        padding: 10px 15px;
    }

    .product-card {
        flex: 0 0 240px;
        /* Slightly smaller cards */
    }

    /* --- Newsletter --- */
    .newsletter {
        padding: 30px 15px;
    }

    .newsletter-form {
        flex-direction: column;
        width: 100%;
        max-width: 100%;
    }

    .newsletter-form input {
        width: 100%;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    .newsletter-form button {
        width: 100%;
        border-radius: 5px;
    }

    /* --- Footer --- */
    .footer-container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 30px;
    }

    .footer-col h3::after {
        left: 50%;
        transform: translateX(-50%);
    }

    .social-links {
        justify-content: center;
    }
}

@media (max-width: 480px) {
    nav h1 {
        font-size: 1.6rem;
    }

    .product-card {
        flex: 0 0 200px;
    }

    .banner {
        height: 35vh;
    }
}